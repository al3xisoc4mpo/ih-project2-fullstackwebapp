<div class="container-md justify-content-center text-center">
  <img class="mb-4 mt-4" src="../images/fur-b&b-logo.png" alt="" width="72" />

  <h2>Login</h2>

  <form action="/auth/login" method="POST">
<div class="mb-3">
    <label class="form-label">
      Email
      <input class="form-control" type="email" name="email" placeholder="rockstar@ironhack.com" />
    </label>
</div>

<div class="mb-3">
    <label class="form-label">Password
      <input class="form-control" type="password" name="password" placeholder="********" />
    </label>
</div>

    <button type="submit">Login</button>

    {{#if errorMessage}}
      <p class="alert alert-warning" role="alert">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>