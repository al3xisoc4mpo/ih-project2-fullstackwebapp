<h1>All Locations</h1>

<a href="/locations/create">Create a location</a>

{{#each location}}
  <h2>{{name}}</h2>
  <img id="location-image" src="{{image}}" alt="location-image" />
  <p>Country:{{country}}</p>
  <p>City:{{city}}</p>
  <h3>Rating: {{rating}}</h3>
  <h3>Comments: 0</h3>

  <a href="/locations/{{id}}">View location details</a>
{{/each}}
<a href="/">Back to main page</a>