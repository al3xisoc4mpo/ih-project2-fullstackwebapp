<div class="container justify-content-center align-items-center text-center">

  <br />

  <h1>Create a location</h1>

  <form action="/locations/create" method="post">
    <label class="form-label" for="name">Name:</label>
    <input class="form-control" type="text" name="name" id="name" />
    <br />
    <label class="form-label" for="image">Image:</label>
    <input class="form-control" type="text" name="image" id="image" />
    <br />
    <label class="form-label" for="country">Country:</label>
    <input class="form-control" type="text" name="country" id="country" />
    <br />
    <label class="form-label" for="city">City:</label>
    <input class="form-control" type="text" name="city" id="city" />
    <br />
    <label class="form-label" for="price">Price:</label>
    <input class="form-control" type="number" name="price" id="price" min="0" />
    <br />
    <label class="form-label" for="guests">Max Guests per User:</label>
    <input class="form-control" type="number" name="guests" id="guests" />
    <br />
    <label class="form-label" for="contact">Contact:</label>
    <input class="form-control" type="text" name="contact" id="contact" />
    <br />
    <button class="btn btn-primary" type="Submit">Create</button>
  </form>

  <hr />

  <a class="btn" href="/locations">Back to locations</a>
</div>